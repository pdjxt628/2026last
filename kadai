using System;

class Program
{
    static void Main()
    {
        Console.Write("数値を入力してください：");
        string input = Console.ReadLine();

        // 整数に変換できるか判定
        if (int.TryParse(input, out int number))
        {
            Console.WriteLine("入力された値は整数です。");
        }
        else
        {
            Console.WriteLine("入力された値は整数ではありません。");
        }
    }
}
